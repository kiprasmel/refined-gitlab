{
	"manifest_version": 2,
	"name": "Refined GitLab",
	"version": "0.0.0",
	"description": "Makes GitLab just a tad bit better",
	"homepage_url": "https://github.com/kiprasmel/refined-gitlab",
	"minimum_chrome_version": "74",
	"applications": {
		"gecko": {
			"id": "refined-gitlab@kipras.org",
			"strict_min_version": "67.0"
		}
	},
	"icons": {},
	"permissions": [
		"storage",
		"cookies",
		"tabs",
		"<all_urls>"
	],
	"options_ui": {
		"chrome_style": true,
		"page": "options.html"
	},
	"background": {
		"scripts": [
			"browser-polyfill.min.js",
			"background.js",
			"cookie-sync.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"index.js",
				"update-api.js"
			]
		}
	]
}
